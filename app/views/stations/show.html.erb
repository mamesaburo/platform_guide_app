<div class="station-show">
  <div class="station-box">
    <div class="station-name">
      <p><%= @station.name %>駅
      </p>
    </div>
    <div class="station-form">
      <%= form_with url: station_path(@station), local: true, method: :get do |f| %>
      <div>
        <div><%= f.label :platform_id, "プラットフォーム番号", class: "search-input" %></div>
        <div><%= f.search_field :platform_id %>番フォームに到着</div>
      </div>
      <%= f.submit "検索", class: 'search-q-btn' %>
      <% end %>
    </div>
    <div class=platform-elevator >
      <% if @platform %>
        <%= @platform.elevator.name %>
      <% end %>
    </div>
    <div class=platform-escalator >
      <% if @platform %>
        <%= @platform.escalator.name %>
      <% end %>
    </div>
    <div class=platform-toilet >
      <% if @platform %>
        <%= @platform.toilet.name %>
      <% end %>
    </div>
    <div class=platform-coinlocker >
      <% if @platform %>
        <%= @platform.coinlocker.name %>
      <% end %>
    </div>
  </div>
</div>